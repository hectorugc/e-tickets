@model IEnumerable<Producer>


@{
    ViewData["Title"] = "List of Producers";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table>
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureUrl)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img src="@item.ProfilePictureUrl" class="rounded-circle" style="max-width:150px">
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square">Edit</i></a> |
                            <a asp-controller="Producers" asp-action="Details" asp-route-id="@item.Id"
                            class="btn btn-outline-info"><i class="bi bi-eye">Details</i></a> |
                            <a class="btn btn-danger text-white"><i class="bi bi-trash">Delete</i></a> |
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

<div style="position: fixed; right:25px; bottom:25px;" class="text-white">
    <a asp-controller="Producers" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle">Add
            New</i></a>
</div>